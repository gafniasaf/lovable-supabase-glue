{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"],
      "@lovable/expertfolio-ui": ["packages/expertfolio-ui/src/index.tsx"],
      "@lovable/expertfolio-ui/*": ["packages/expertfolio-ui/src/*"],
      "@lovable/expertfolio-adapters": ["packages/expertfolio-adapters/src/adapters/index.ts"],
      "@lovable/expertfolio-adapters/*": ["packages/expertfolio-adapters/src/*"]
    }
  }
}




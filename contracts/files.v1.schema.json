{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Files API v1 Schemas",
  "definitions": {
    "FileFinalizeRequest": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1,
          "description": "File key is required"
        },
        "size_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "File size must be non-negative"
        }
      },
      "required": ["key", "size_bytes"],
      "additionalProperties": false
    },
    "FileFinalizeResponse": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean"
        }
      },
      "required": ["ok"],
      "additionalProperties": false
    },
    "FileDownloadRequest": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "File ID is required"
        }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "FileDownloadResponse": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "URL is required"
        },
        "filename": {
          "type": ["string", "null"]
        },
        "content_type": {
          "type": ["string", "null"]
        }
      },
      "required": ["url"],
      "additionalProperties": false
    }
  }
}